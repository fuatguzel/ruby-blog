<%= form_with model: article do |form| %>
  <div class="md:flex md:items-center mb-6">
	<div>
    <%= form.label :title, :class=> "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %><br>
    </div><br>
	<div>
      <%= form.text_field :title , :class=> "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
  </div><br>
	<% article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="md:flex md:items-center mb-6">
  <%= form.label :body, :class=> "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %><br>
  <%= form.text_area :body , :class=> "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full h-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %><br>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
  <%= form.label :status %><br>
  <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
</div><br>
	<div>
    <%= form.submit :class => "bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded"%>
  </div>
    
  </div>
<% end %>
